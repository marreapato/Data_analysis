x<-c(25:1)
x
seq(1,10,by=2)
#ordenacao
x<-c(seq(1,25,by=3))
k=NULL
j=length(x)
for (i in 1:length(x)){
  
  j = i
  
  while((j>1)){
    if ((x[j]>x[j-1])){
      temp = x[j]
      x[j] = x[j-1]
      x[j-1] = temp
    }
    j = j-1
  }
  
}
x
#decrescendo
x=x[order(x,decreasing = T)]
x
