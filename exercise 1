rep(1,10)
rep(c(1,2),12)
rep(c(0,1),10)
is.prime <- function(num) {
  if (num == 2) {
    TRUE
  } else if (any(num %% 2:(num-1) == 0)) {
    FALSE
  } else { 
    TRUE
  }
}
is.prime(4)
rep(c("A","B"),5)

